{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react-jsx",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"outDir": "./dist",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
